<?xml version="1.0" encoding="utf-8"?>
<extension version="1.7" type="plugin" group="adminpraisesearch" method="upgrade" publish="true">
	<name>adminpraise_search_menu</name>
	<author>adminpraise</author>
	<creationDate>May 2011</creationDate>
	<copyright>Copyright (C) 2011 adminpraise.com. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>services@compojoom.com</authorEmail>
	<authorUrl>www.compojoom.com</authorUrl>
	<version>1.5</version>
	<description>Allows Searching of the site menu</description>
	<files>
		<filename plugin="menu">menu.php</filename>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="search_limit" type="text" size="5" default="50" label="Search Limit" description="Number of Search items to return"/>
			</fieldset>
		</fields>
	</config>
</extension>
